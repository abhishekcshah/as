<?xml version='1.0' encoding='utf-8'?>
<tomcat version="7.0.50">
  <farm name="tomcat7" >
    <jvm opts="-XXmx1G -XXms1G"/>

    <http URIEncoding="UTF-8" enableLookups="false" disableUploadTimeout="true"
          maxThreads="200"  minSpareThreads="10" 
          acceptCount="100" connectionTimeout="20000"  />


    <server name="server1" shutdownPort="8005"  httpPort="8080"  httpsPort="8443"  ajpPort="9009"/>
    <server name="server2" shutdownPort="8006"  httpPort="8081"  httpsPort="8444"  ajpPort="9010"/>
    <server name="server3" shutdownPort="8007"  httpPort="8082"  httpsPort="8445"  ajpPort="9011"/>
  </farm>

  <webapp docBase="webapps">
    <context path="/"  reloadable="false" runAt="tomcat7">
      <datasource name="jdbc/eams" url="jdbc:oracle:thin:@//localhost:1521/orcl" driver="oracle" username="eams"/>
    </context>
  </webapp>
</tomcat>