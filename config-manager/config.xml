<?xml version='1.0' encoding='utf-8'?>
<tomcat version="7.0.50">
  <farm name="tomcat">
    <jvm opts="-noverify -Xmx1.5G -Xms1.5G -XX:MaxPermSize=256m"/>

    <http URIEncoding="UTF-8" enableLookups="false" disableUploadTimeout="true"
          maxThreads="200"  minSpareThreads="10" 
          acceptCount="100" connectionTimeout="20000"  />

    <server name="server" shutdownPort="8005"  httpPort="8080"  httpsPort="8443"  ajpPort="9009"/>
  </farm>

  <webapp base="../webapps">
    <context path="/eams" reloadable="false" runAt="tomcat">
    <!-- 
     如果数据库密码需要加密 可以查看
     http://app.supwisdom.com:81/wiki/index.php/公司:实施相关/数据库密码加密
     -->
      <datasource name="jdbc/eams" url="jdbc:oracle:thin:@&lt;host&gt;:1521:orcl" driver="oracle" username="eams1"  maxActive="150"/>
    </context>
  </webapp>
</tomcat>
